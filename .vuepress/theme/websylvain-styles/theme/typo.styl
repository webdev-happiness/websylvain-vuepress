@import url('https://fonts.googleapis.com/css?family=Exo:700|Open+Sans|Roboto');

@import 'variables'

body{
  font-family: $text_font, sans-serif;
  position: relative;
  line-height: 2rem;
  font-size: 1rem;
}

h1, h2, h3, h4, h5{
  font-family: $title_font;
      line-height: 1.8;
      margin-top: 55px;
}

a{
  color:$second_color!important;
}



  @media (max-width: $MQMobile){
    h1 {
      font-size: 1.6rem;
    }
    h2 {
          font-size: 1.3rem!important;
    }
    h3 {
          font-size: 1rem!important;
    }
