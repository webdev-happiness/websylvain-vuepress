.custom-block
  &.danger, &.tip, &.warning
    padding: .1rem 1.5rem;
    border-left-width: .5rem;
    border-left-style: solid;
    margin: 1rem 0;
  &.tip
    background-color: #f3f5f7;
    border-color: #42b983;
  &.warning
    background-color: rgba(255,229,100,.3);
    border-color: #e7c000;
    color: #6b5900;
    .custom-block-title
      color: #b29400;
  &.danger
    background-color: #ffe6e6;
    border-color: #c00;
    color: #4d0000;
    .custom-block-title
      color: #900;
  .custom-block-title
    font-weight: 600;
    margin-bottom: -.4rem;
    margin-block-start: 1em;
    margin-block-end: 1em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
